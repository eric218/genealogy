package com.dct.swocean.controller;

import javax.servlet.http.HttpServletRequest;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import com.alibaba.fastjson.JSONObject;
import com.dct.swocean.service.TableExistsService;

@Controller
@RequestMapping("/TableExists")
public class TableExistsController {
	
	@Autowired
	private TableExistsService tableExistsService;
	
	@RequestMapping	("/table/{json}")
	@ResponseBody
	public boolean tableExists(HttpServletRequest request,@PathVariable("json")String json){
		JSONObject jsonObj = JSONObject.parseObject(json);
		String table = jsonObj.getString("tablename");
		if (tableExistsService.tableExists(table) != null){
			return true;
		}
		return false;
	}
	
}
